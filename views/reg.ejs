            <div class="forms">
                <div class="leftsection11">
                    <form class="form" id="Form1" method="post" action="/reg">
                        <p class="title">Register </p>
                        <p class="message">Signup now and get full access to our app. </p>
                            <div class="flex">
                            <label class="spacingbet">
                                <input required="" placeholder="First Name" id="Firstname" name="Firstname" type="text" class="input">
                                
                            </label>
                            <label class="spacingbet">
                                <input required="" placeholder="Last Name" id="Lastname" name="Lastname"  type="text" class="input">
                             
                            </label>
                        </div>    
                        <label class="spacingbet">
                            <input required="" placeholder="Email" name="Email" id="Email"  type="email" class="input">
                            <div id='emailerr' class='err'></div>
                            <i class="error-icon fas fa-exclamation-circle" id="er1"></i>
                        </label> 
                            
                        <label class="spacingbet"> 
                            <input required="" placeholder="Password" id="Password" name="Password" type="password" class="input">
                      
                            <div id='passerr' class='err'></div>
                            <i class="error-icon fas fa-exclamation-circle" id="er2"></i>
                        </label>
                        <label class="spacingbet">
                            <input required="" placeholder="Confirm Password" id="Cpassword" name="Cpassword" type="password" class="input">
                            <div id='cpasserr' class='err'></div>
                            <i class="error-icon fas fa-exclamation-circle" id="er3"></i>
                        </label>
                        <label for="accessibilityDropdown">Select Your Accessibility Condition:</label>
                        <select id="accessibilityDropdown" name="accessibilityCondition">
                            <option value="deaf">Deaf</option>
                            <option value="blind">Blind</option>
                            <option value="colourBlind">Colour Blind</option>
                            <option value="adhd">ADHD</option>
                        </select>
                        <button class="submit" type="submit">Submit</button>
                        <p class="signin">Already have an acount ? <button class="signinbut" id="signinbut" type="button">Sign in</button></p>
                    </form>



                    
                    <form class="form" id="Form2" method="post" action="/reg">
                        <p class="title margintitle">Sign in </p>
                        <p class="message">Sign in now and get full access to our app. </p>       
                        <label class="spacingbet morespacing">
                            <input required="" placeholder="Email" id="inemail" type="email" class="input">
                            <div id='semailerr' class='err'></div>
                            <i class="error-icon fas fa-exclamation-circle" id="er4"></i>
                        </label> 
                            
                        <label class="spacingbet morespacing"> 
                            <input required="" placeholder="Password" id="inpass" type="password" class="input">
                            <div id='spasserr' class='err'></div>
                            <i class="error-icon fas fa-exclamation-circle" id="er5"></i>
                   
                        </label>
                        <button  class="submit marginsign">Sign in</button>
                        <p class="signin">Create new One? <button class="signinbut" id="register" type="button">Register</button></p>
                    </form>
                </div>
            </div>
            
            
