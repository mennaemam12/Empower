                    <% function generateJobItems(filterFn) {
                        if (jobs !== "") {
                          jobs.forEach((job) => {
                            if (filterFn(job)) { %>
                              <div class="job-item p-4 mb-4">
                                <div class="row g-4">
                                    <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                        <img class="flex-shrink-0 img-fluid border rounded reading12" id="cimg"  src="/img/<%=job.Company%>.jpg" alt="<%=job.Company%> Logo" style="width: 80px; height: 80px;">
                                        <div class="text-start ps-4">
                                            <h5 class="mb-3 reading12"><%=job.Name%></h5>
                                            <h5 class="reading12" id="<%=job.Company%>" style="display:none;"><%=job.Company%></h5>
                                            <span class="text-truncate me-3 reading12"><i class="fa fa-map-marker-alt text-primary me-2 reading12"></i><%=job.Location%></span>
                                            <span class="text-truncate me-3 reading12"><i class="fa-solid fa-map-pin" style="color:rgb(18, 18, 104) reading12"></i> <%=job.Place%></span>
                                            <span class="text-truncate me-0 reading12"><i class="far fa-money-bill-alt text-primary me-2 reading12"></i><%=job.Salary%></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                        <div class="d-flex mb-3">
                                            <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                            <button class="btn btn-primary view-button reading12" data-jobid="<%=job._id%>">View Details</button>
                                        </div>
                                        <small class="text-truncate reading12"><i class="far fa-calendar-alt text-primary me-2 reading12"></i>Date Line: 01 Jan, 2045</small>
                                    </div>
                                </div>
                              </div>
                            <% }
                          });
                        }
                      } %>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane fade show p-0 active" >
                            <% generateJobItems((job) => {
                            return true; 
                            }); %>   
                        </div>

                        <div id="tab-2" class="tab-pane fade show p-0">
                            <% generateJobItems((job) => {
                            return job.Place.toLowerCase().includes("hybrid") || job.Place.toLowerCase().includes("onsite");
