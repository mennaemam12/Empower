<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Upload Resume</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">
    
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/styleUploadResume.css" rel="stylesheet">
</head>
<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/ee4053c9b9.js" crossorigin="anonymous"></script>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Navbar Start -->
        <%-include("partials/nav.ejs")%> 
        <!-- Navbar End -->
        
        <!-- Header Start -->
        <% if(email!="") {%>
            <p id="email" style="display: none;"><%=email%></p>
         <% }else{ %>
            <p id="email" style="display: none;">none</p>
            <% } %>
        <div class="container-xxl py-5 bg-dark page-header mb-5">
            <div class="container my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Upload Resume</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb text-uppercase">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Upload Resume</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- Header End -->

        <div class="main-container">
            <div class="upload-container">
                <form id="upload-form" method="post" action="/uploadResume"  enctype="multipart/form-data">
                    <label for="resume-upload" class="upload-button" id="uploadLabel" >Upload Resume</label>
                    <input type="file" id="resume-upload" name="resume" class="hidden">
               </form>  
            </div>
        <div>
            <div id="viewEdit">
                <div>
                    <button id="openPopup">View Resume</button>
                </div>
                <div style="margin-left: 5%;">
                    <form id="edit-form" method="post" action="/uploadResume/filter/edit"  enctype="multipart/form-data">
                        <input type="file" id="resume-edit" name="newResume" class="hidden">
                        <label for="resume-edit" id="edit-button" >Edit Resume</label>
                   </form>  
                </div>
            </div>
            <div id="pdfPopup" class="popup">
                <div class="popup-content">
                    <button id="closePopup">X</button>
                    <iframe id="pdfFrame" src=""></iframe>
                </div>
            </div>
        </div>

        <div id="job-list" style="margin-top: 4%;width: 1000px;margin-left: 13%;">

        </div>

        </div>
        

         <!-- Footer Start -->
         <%-include("partials/footer.ejs")%> 
         <!-- Footer End -->
 
 
         <!-- Back to Top -->
         <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

            <!-- JavaScript Libraries -->
            <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/lib/wow/wow.min.js"></script>
            <script src="/lib/easing/easing.min.js"></script>
            <script src="/lib/waypoints/waypoints.min.js"></script>
            <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
        
            <!-- Template Javascript -->
            <script src="/js/main.js"></script>
            <script src="/js/uploadResume.js"></script>

            <script>
                document.addEventListener("DOMContentLoaded", () => {
                  const resumeUploadInput = document.getElementById("resume-upload");
                  const uploadForm = document.getElementById("upload-form");
              
                  resumeUploadInput.addEventListener("change", () => {
                    // Check if a file is selected
                    if (resumeUploadInput.files.length > 0) {
                      // Submit the form
                      uploadForm.submit();
                    }
                  });
                });
              </script>
              
    
</body>
</html>