<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <div id="sidebar">
        <div class="header">Admin Dashboard</div>
        <a class="nav-link" href="#">Dashboard</a>
        <a class="nav-link" href="#">Job Listings</a>
        <a class="nav-link" href="#">Applicants</a>
        <a class="nav-link" href="#">Settings</a>
        <a class="nav-link" href="#">Logout</a>
    </div>
    <div id="welcome-content">
            <h1>Applicant Filtering</h1>
        <div class="filter-section">
        <h2>Filter Applicants</h2>
        <div >
            <form id="myForm" action="dashboard/filter" method="post" style="display: flex;">
                <div>
                    <label for="job-select">Select Job:</label>
                    <select id="job-select" name="job">
                        <option value="">select job</option>
                        <% if(jobs!==undefined){ %>
                            <% jobs.forEach(job=>{%>
                            <option value=<%=job.Name%>><%=job.Name%></option>
                        <% }) %>
                        <% } %>
                    </select>
                </div>
                
                <div style="margin-left: 50px;">
                    <label for="company-select">Select Company:</label>
                    <select id="company-select" name="company" >
                        <option value="">select company</option>
                        <% if(jobs!==undefined){ %>
                            <% jobs.forEach(job=>{%>
                                <option value=<%=job.Company%> ><%=job.Company%></option>
                        <% }) %>
                        <% } %>
                    </select>
                </div>
                <div style="margin-left: 90px; width: 100px;">
                    <button id="filter-button" type="submit">Filter</button>
                </div>
            </form>
        </div>
        </div>
        
        <% if(sortedData!=""){%>
            <div id="applicant-list" class="applicant-list">
                <%for(var k=0;k<sortedData.length;k++){%>
                    <div id="user" class="applicant" >
                        <h4 style="float:left;"><%=k+1%>-</h4>
                        <h4>Name: <%=sortedData[k].user.Firstname%> <%=sortedData[k].user.Lastname%></h4>
                        <h4>Email: <%=sortedData[k].user.email%></h4>
                        <h4>Disability: <%=sortedData[k].user.accessibilityValue %></h4>
                        <%var fileName=sortedData[k].user.email.substring(0, sortedData[k].user.email.indexOf("@")); %>
                        <a href="#" class="view-resume-button" 
                        onclick="openResumePopup('/uploads/'+'<%=fileName%>'+' resume.pdf')">View Resume</a>        
                    </div>
                <%}%>
            </div>
        <% } %>
    </div>

    <div id="resume-popup" class="popup">
        <div class="popup-content">
        <span class="close-button" onclick="closeResumePopup()">&times;</span>
        <iframe id="resume-iframe" src="" frameborder="0"></iframe>
        </div>
    </div>


    <script src="/js/hr-filtering.js"></script>
</body>
</html>