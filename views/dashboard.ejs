    <div class="filter1" id="welcome-content">
            <div class="title12">Applicant Filtering</div>
        <div class="filter-section">
        <h2 class="filterapp">Filter Applicants</h2>
        <div >
            <form class="form12" id="myForm" action="dashboard" method="post" >
                <div style="display: flex;">
                <div>
                    <label for="job-select">Select Job:</label>
                    <select class="selecting" id="job-select" name="job">
                        <% if(sortedData!=""){%>
                            <option value=<%=job%><%=job%>></option>
                        <%}else{%>
                        <option class="options" value="">select job</option>
                        <%}%>
                        <% if(jobs!==undefined){ %>
                            <% jobs.forEach(job=>{%>
                            <option class="options" value=<%=job.Name%>><%=job.Name%></option>
                        <% }) %>
                        <% } %>
                    </select>
                </div>
                
                <div style="margin-left: 50px;">
                    <label for="company-select">Select Company:</label>
                    <select class="selecting" id="company-select" name="company" >
                        <% if(sortedData!=""){%>
                            <option value=<%=company%><%=company%>></option>
                        <%}else{%>
                        <option class="options"  value="">select company</option>
                        <%}%>
                        <% if(jobs!==undefined){ %>
                            <% jobs.forEach(job=>{%>
                                <option class="options" value=<%=job.Company%> ><%=job.Company%></option>
                        <% }) %>
                        <% } %>
                    </select>
                </div>
            </div>               
                    <button  id="filter-button" type="submit">Filter</button>
            </form>
        </div>
        </div>
        
        <% if(sortedData!=""){%>
            <div id="applicant-list" class="applicant-list">
                <%for(var k=0;k<sortedData.length;k++){%>
                    <div id="user">
                        <div class="applicant">
                          <div class="titles1"> <span class="titles">Name: </span><%=sortedData[k].user.Firstname%> <%=sortedData[k].user.Lastname%></div>
                          <div class="titles1"><span class="titles">Email: </span><%=sortedData[k].user.email%></div>
                          <div class="titles1"><span class="titles">Disability: </span><%=sortedData[k].user.accessibilityValue %></div>
                          <%var fileName=sortedData[k].user.email.substring(0, sortedData[k].user.email.indexOf("@")); %>
                        </div>
                        <a href="#" class="view-resume-button" 
                        onclick="openResumePopup('/uploads/'+'<%=fileName%>'+' resume.pdf')">View Resume </a>  
                        <a href="#" class="view-profile-button" 
                        onclick="openResumePopup('/uploads/'+'<%=fileName%>'+' resume.pdf')">View Profile </a> 
                        <a href="#" class="accept-button" 
                        onclick="openResumePopup('/uploads/'+'<%=fileName%>'+' resume.pdf')">Accept CV </a> 
                    </div>
                    
                   
                <%}%>
            </div>
        <% } %>
