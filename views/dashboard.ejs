<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="css/dashboard.css">
</head>
<body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <div id="sidebar">
        <div class="header">Admin Dashboard</div>
        <a class="nav-link" href="#">Dashboard</a>
        <a class="nav-link" href="#">Job Listings</a>
        <a class="nav-link" href="#">Applicants</a>
        <a class="nav-link" href="#">Settings</a>
        <a class="nav-link" href="#">Logout</a>
    </div>
    <div id="welcome-content">
            <h1>Applicant Filtering</h1>
        <div class="filter-section">
        <h2>Filter Applicants</h2>
        <div style="display: flex;">
            <form id="myForm" action="dashboard/filter" method="post"></form>
                <div>
                    <label for="job-select">Select Job:</label>
                    <select id="job-select" name="job">
                        <option value="">select job</option>
                        <% if(jobs!==undefined){ %>
                            <% jobs.forEach(job=>{%>
                            <option value=<%=job.Name%>><%=job.Name%></option>
                        <% }) %>
                        <% } %>
                    </select>
                </div>
                
                <div style="margin-left: 50px;">
                    <label for="company-select">Select Company:</label>
                    <select id="company-select" name="company" >
                        <option value="">select company</option>
                        <% if(jobs!==undefined){ %>
                            <% jobs.forEach(job=>{%>
                                <option value=<%=job.Company%> ><%=job.Company%></option>
                        <% }) %>
                        <% } %>
                    </select>
                </div>
                <div style="margin-left: 90px; width: 100px;">
                    <button id="filter-button" type="submit">Filter</button>
                </div>
            </form>
        </div>
        </div>
        
        <% if(sortedData!=""){%>
            <div id="applicant-list"></div>
                <% var i=0; %>
                <% sortedData.forEach(data=>{%>
                    <div id="user" style="display: flex;">
                        <div>
                            <h4><%=i%>-</h4>
                        </div>
                        <div>
                            <h4>Name: <%=data.user.Firstname%> <%=data.user.Lastname%></h4>
                        </div>
                        <div>
                            <h4>Email: <%=data.user.email%></h4>
                        </div>
                        <div>
                            <h4>Disability: <%=data.user.accessibilityValue %></h4>
                        </div>
                    </div>
                <%})%>
            </div>
        <% } %>
        
    </div>
    <script src="/js/hr-filtering.js"></script>
</body>
</html>